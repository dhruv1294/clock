<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CC5C82"
    >
    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numpicker"
        android:layout_margin="10dp"
        android:solidColor="@color/colorAccent"
        android:layout_toLeftOf="@id/min"
        android:layout_below="@id/textView9"

/>
    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/forsec"
        android:layout_margin="10dp"
        android:solidColor="@color/colorAccent"
        android:layout_toRightOf="@id/min"
        android:layout_below="@id/textView9"
        />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:solidColor="@color/colorAccent"
        android:layout_below="@id/textView9"
        android:layout_centerHorizontal="true"
        android:id="@+id/min"/>
    <!--<Chronometer
        android:textSize="30dp"
        android:id="@+id/chrono2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        />-->


    <TextView
        android:id="@+id/textView2"
        android:textSize="35dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:textColor="@color/colorAccent"
        android:layout_height="wrap_content"
        android:text="00" />



    <Button
        android:id="@+id/button6"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonbg"
        android:layout_below="@id/textView2"
        android:layout_centerHorizontal="true"
        android:text="START" />

    <Button
        android:id="@+id/button7"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/button6"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonbg"
        android:text="reset"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_above="@id/textView2"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:textSize="24dp"
        android:textColor="#FFFF"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:text="10" />

    <TextView
        android:id="@+id/textView6"
        android:layout_above="@id/textView2"
        android:layout_centerVertical="true"
        android:textSize="24dp"
        android:layout_toRightOf="@id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFF"
        android:text="00" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_above="@id/textView2"
        android:textSize="24dp"
        android:textColor="#FFFF"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/textView5"
        android:text="00" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fontt"
        android:textSize="24dp"
        android:layout_margin="5dp"
        android:layout_toLeftOf="@id/textView9"
        android:text="HOURS" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:fontFamily="@font/fontt"
        android:layout_centerHorizontal="true"
        android:textSize="24dp"
        android:layout_height="wrap_content"
        android:text="MINUTES"
        android:layout_margin="5dp"

        />

    <TextView
        android:id="@+id/textView10"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/textView9"
        android:fontFamily="@font/fontt"
        android:textSize="24dp"
        android:layout_height="wrap_content"
        android:text="SECONDS" />


</RelativeLayout>